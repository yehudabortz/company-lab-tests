<%= form_for [:admin, @user] do |f| %>
    <div class="field">
        <%= f.label :first_name, class: "label" %>
        <%= f.text_field :last_name, class: input_with_errors_class(@user, :first_name)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:first_name]) if @user.errors.any? %></p>
    </div>
    <div class="field">
        <%= f.label :last_name, class: "label" %>
        <%= f.text_field :last_name, class: input_with_errors_class(@user, :last_name)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:last_name]) if @user.errors.any? %></p>
    </div>
    <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.text_field :email, class: input_with_errors_class(@user, :email)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:email]) if @user.errors.any? %></p>
    </div>
    <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: input_with_errors_class(@user, :password)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:password]) if @user.errors.any? %></p>
    </div>
    <div class="control">
        <%= f.submit class: "button is-link" %>
    </div>
<% end %>