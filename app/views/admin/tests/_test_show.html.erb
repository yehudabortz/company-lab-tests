<div class="card">
    <header class="card-header">
      <p class="card-header-title">
        Test number: <%= @test.unique_test_id %>
      </p>
   
    </header>
    <div class="card-content">
      <div class="content">
        <ul>
          <% if @test.verified %>
          <li>
            MMA <strong><%= @test.mma %></strong>
          </li>
          <li>
            Creatinine <strong><%= @test.creatinine %></strong>
          </li>
          <li>
            Final Result <strong><%= @test.final_result %></strong>
          </li>
          <% else %>
          <li>
            Results Pending
          </li>
        </ul>
        <% end %>
        
      </div>
      <div class="content">
        <br>
        <time datetime="2016-1-1">Updated on <strong><%= readable_timestamp(@test.updated_at)%> </strong></time>
      </div>
    </div>
    <footer class="card-footer">
        <% if lab_admin? %>
        <%= link_to "Update Test", edit_admin_test_path, class: "card-footer-item" %>
        <% elsif company_admin? %>
        <%= link_to @test.user.first_name, user_path, class: "card-footer-item" if @test.user %>
        <% end %>
    </footer>
  </div>