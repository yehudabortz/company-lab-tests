<div class="container">
    <%= render 'test_show' %>
</div>
<% if current_lab %>
    <div class="container">
        <%= link_to "Update Test", edit_admin_test_path(@test), class: "btn" %>
    </div>
<% end %>
<% if current_user.super_admin && @test.user %>
<div class="container">
            <%= link_to "View All of #{@test.user.first_name}'s Tests", user_tests_path(@test.user), class: "btn primary-outline" %>
            <br>
            <%= link_to "Add A New Test For #{@test.user.first_name}", admin_user_tests_path(current_user), method: "post", class: "btn primary-outline" %>
    </div>
<% end %>


<% if current_user.super_admin && @test.user.nil? %>
    <%= link_to "Delete", admin_test_path(@test), method: "delete", data: { confirm: 'Are you sure you want to delete this test? This action cannot be undone.' }, class: "btn-sm red-outline" %>
<% end %>
