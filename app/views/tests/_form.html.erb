<%= form_for @test, html: {class:"form-stretch"} do |f| %>

    <%= f.label :unique_test_id, class: "label" %>
    <%= f.text_field :unique_test_id, :disabled => true  %> <br>
    <p class="help is-danger"><%= format_error(@test.errors[:unique_test_id]) if @test.errors.any? %></p>
    
    <%= f.label :mma, class: "label" %>
    <%= f.text_field :mma, class: input_with_errors_class(@test, :mma) %> <br>
    <p class="help is-danger"><%= format_error(@test.errors[:mma]) if @test.errors.any? %></p>    
    
    <%= f.label :creatinine, class: "label" %>
    <%= f.text_field :creatinine, class: input_with_errors_class(@test, :creatinine) %> <br>
    <p class="help is-danger"><%= format_error(@test.errors[:creatinine]) if @test.errors.any? %></p>
    
    <%= f.label :final_result, class: "label" %>
    <%= f.text_field :final_result, class: input_with_errors_class(@test, :final_result) %> <br>
    <p class="help is-danger"><%= format_error(@test.errors[:final_result]) if @test.errors.any? %></p>
    
    <%= f.label :verified, class: "label" %>
    <%= f.check_box :verified %> <br>

    <%= f.submit %> <br>
<% end %>
