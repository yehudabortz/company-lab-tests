<%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %> <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %> <br>
    <%= f.label :email %>
    <%= f.text_field :email %> <br>
    <%= f.label :birthdate %>
    <%= f.date_field :birthdate %> <br>
    <%= f.label :gender %>
    <%= f.select :gender, ['Male', 'Female', 'Prefer not to say', 'Other'], :prompt => 'Select Gender' %> <br>
    <%= f.label :phone %>
    <%= f.text_field :phone %> <br>
    <%= f.label :dr_email %>
    <%= f.text_field :dr_email %> <br>
<% end %>