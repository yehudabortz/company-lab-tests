
<%= form_for @user, html: {class:"form-stretch"} do |f| %>
        <%= f.label :first_name, class: "label" %>
        <%= f.text_field :first_name, class: input_with_errors_class(@user, :first_name) %>
        <p class="help is-danger"><%= format_error(@user.errors[:first_name]) if @user.errors.any? %></p>

        <%= f.label :last_name, class: "label" %>
        <%= f.text_field :last_name, class: input_with_errors_class(@user, :last_name)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:last_name]) if @user.errors.any? %></p>

        <%= f.label :email, class: "label" %>
        <%= f.text_field :email, class: input_with_errors_class(@user, :email)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:email]) if @user.errors.any? %></p>

        <%= f.label :birthdate, class: "label" %>
        <%= f.text_field :birthdate, placeholder: "mm/dd/yyyy", type: "date", class: input_with_errors_class(@user, :birthdate)  %>
        <p class="help is-danger"><%= format_error(@user.errors[:birthdate]) if @user.errors.any? %></p>

        <%= f.label :gender, class: "label"%>
        <div class="input-box">
            <%= f.select :gender, ['Male', 'Female', 'Prefer not to say', 'Other'], :prompt => 'Select Gender', class: input_with_errors_class(@user, :gender)  %>
        </div> 
        <p class="help is-danger"><%= format_error(@user.errors[:gender]) if @user.errors.any? %></p>

        <%= f.label :phone, class: "label" %>
        <%= f.text_field :phone, class: input_with_errors_class(@user, :phone)  %> 
        <p class="help is-danger"><%= format_error(@user.errors[:gender]) if @user.errors.any? %></p>

        <%= f.label :dr_email, class: "label" %>
        <%= f.text_field :dr_email, class: input_with_errors_class(@user, :dr_email) %> 
        <p class="help is-danger"><%= format_error(@user.errors[:dr_email]) if @user.errors.any? %></p>
    <% if !logged_in? %>
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: input_with_errors_class(@user, :password) %>
        <p class="help is-danger"><%= format_error(@user.errors[:password]) if @user.errors.any? %></p>
    <% end %>
        <%= f.submit class: "btn" %>
<% end %>
