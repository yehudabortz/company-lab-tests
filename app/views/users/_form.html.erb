<%= form_for @user do |f| %>
    <%= f.label :first_name, class: "label" %>
    <%= f.text_field :first_name, class: "input" %>  <br></br>
    <%= f.label :last_name, class: "label" %>
    <%= f.text_field :last_name, class: "input" %> <br></br>
    <%= f.label :email, class: "label" %>
    <%= f.text_field :email, class: "input" %>  <br></br>
    <%= f.label :birthdate, class: "label" %>
    <%= f.text_field :birthdate, placeholder: "mm/dd/yyyy", class: "input", type: "date" %>  <br></br>
    <%= f.label :gender, class: "label"%>
    <div class="select">
        <%= f.select :gender, ['Male', 'Female', 'Prefer not to say', 'Other'], :prompt => 'Select Gender' %> <br>
    </div> 
    <br></br>
    <%= f.label :phone, class: "label" %>
    <%= f.text_field :phone, class: "input" %>  <br></br>
    <%= f.label :dr_email, class: "label" %>
    <%= f.text_field :dr_email, class: "input" %> <br></br>
    <%= f.label :password, class: "label" %>
    <%= f.text_field :password, class: "input" %> <br></br>
    <div class="control">
        <%= f.submit class: "button is-link" %>
    </div>
<% end %>