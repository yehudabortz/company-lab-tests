<%= form_for @company do |f| %>
    <%= f.label :company_name, class: "label" %>
    <%= f.text_field :name, class: "input" %> <br></br>
    <%= f.fields_for @user do |f| %>
        <%= render partial: 'users/base_user_form', locals: {f: f} %>
    <% end %>

    <div class="control">
        <%= f.submit class: "button is-link" %>
    </div>
<% end %>
